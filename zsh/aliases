

# Job-Control: Schnelles In-Den-Vordergrund-Bringen
alias  1='fg %1'
alias  2='fg %2'
alias  3='fg %3'
alias  4='fg %4'
alias  5='fg %5'
alias  6='fg %6'

# ...und wieder zur√ºck!
alias 11='bg %1'
alias 22='bg %2'
